  endif
  for(i:=1;i<all.size();i:=i+1)
    if(all[i].serial == choose)
      break;
    endif
  endfor
  var abv := "[" + guild.getprop("guildabv") + "]";
  SetObjProperty(all[i], "guildtitle", tname);
  all[i].title_guild := tname + ", " + abv;
  SetObjProperty(who, "abv", "1");
endfunction

function breakalliance(guild,who)
  var all:=guild.allyguilds;
  if(all.size()==0)
    SendSysMessage(who, "There are no ally guilds.",3,70);
    sleep(3);
	 return;
  endif
  FillInArrays(guild,all, "Break Alliance");
  var choose:=0,box:=SendDialogGump(who,filllayout,filldata);
  if(box[0]==1000)
    return;
  elseif(box[0]==1)
    foreach k in(box.keys)
      if(k>1)
        choose:=k;
        break;
      endif
    endforeach
  else
    return;
  endif
  if(!choose || choose==0)
    return;
  endif
  box:=FindGuild(choose);
  	if (guild.removeallyguild( box ))
  		SendSysMessage(who, "You have broken the alliance with " + box.getprop("guildname"), 3, 70);
	endif
	
endfunction

