  if(heading=="Declare Fealty" || heading=="Set Allies" || heading=="Set Enemies" || heading=="Dismiss Member" || heading=="Grant Member Title" || heading=="Refuse Recruit" || heading=="Accept Recruit" || heading=="View Status" || heading=="Break Alliance")
    col:=175;
