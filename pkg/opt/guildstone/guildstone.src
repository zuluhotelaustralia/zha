    else
      var newarray:={};
      guildarray:=box.getprop("GuildDeclareStatus");
      if(!guildarray)
        guildarray:={};
      endif
      var alreadymade:=0;
      foreach gstatus in guildarray
        if(guild.guildid==gstatus[2] && box.guildid==gstatus[1])
          if(gstatus[3]=="RA")
            alreadymade:=1;
          else
